exec --no-startup-id ${HOME}/.config/i3/multiMonitor.sh
exec --no-startup-id ${HOME}/.config/polybar/launch.sh
exec --no-startup-id compton --daemon --config ${HOME}/.config/compton/config
exec --no-startup-id wal --theme sexy-gotham -q
exec --no-startup-id feh --bg-fill $wallpaper
exec --no-startup-id redshift -l 45.73:4.90 -t 6500K:4000K
exec --no-startup-id xset dpms 300
exec --no-startup-id xautolock -time 5 -locker $locker
exec_always --no-startup-id xrdb -merge ${HOME}/.Xresources ${HOME}/.cache/wal/colors.Xresources
